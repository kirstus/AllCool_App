<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#DDD"
    android:padding="5dp">


    <ImageView
        android:id="@+id/imgDrink"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="bottom"

        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/nome"
        style="@style/Text"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:contentDescription="Nome do drink"
        android:text="nome"/>

    <TextView
        android:id="@+id/categoria"
        style="@style/Text"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="Categoria do drink"
        android:text="categoria" />

    <TextView
        android:id="@+id/classificacao"
        style="@style/Text"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="Classificação do drink segundo a IBA"
        android:text="classificacao" />

    <TextView
        android:id="@+id/alcoolico"
        style="@style/Text"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:contentDescription="Classificação alcoolica do drink"
        android:text="alcoolico"
        android:visibility="invisible"/>
</LinearLayout>